<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%=form_for @user do |f| %>

<%= f.label "Name"%>
<%= f.text_field :name %>

<%= f.label "Email" %>
<%= f.text_field :email_address %>

<%= f.label "Password"%>
<%= f.text_field :password %>

<%= f.submit %>
<% end %>